<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00210843"
    android:orientation="vertical"
  >



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#8b2f7d9b"
    android:elevation="2dp"
    android:padding="6dp">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/newDesignImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="18dp"
        app:civ_border_color="#f3949494"
        />

    <TextView
        android:id="@+id/idFace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkBox2"
        android:layout_alignBottom="@+id/checkBox2"
        android:layout_toEndOf="@+id/newDesignImage"
        android:paddingBottom="5dp"
        android:text="Face Code"
        android:textAppearance="@style/NotificationTime"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/short_description3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox2"
        android:layout_toEndOf="@+id/newDesignImage"
        android:text="Free android tutorials and examples for beginners and expert."
        android:textColor="#8b8b8b" />


    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/newDesignImage"
        android:layout_marginEnd="54dp" />

</RelativeLayout>

</LinearLayout>